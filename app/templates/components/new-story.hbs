{{#if addNewStory}}
  <h3>Create a new story</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline id="headline"}}
      </div>
      <div class="form-group">
        <label for="photo">Photo</label>
        {{input value=photo id="photo"}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="story">Story</label>
        {{input value=story id="story"}}
      </div>
      <button {{action 'saveStory'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'storyFormShow'}}>New Story</button>
{{/if}}
