{{#if addNewStory}}
  <h3>Create a new story</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline id="headline"}}
      </div>
      <div class="form-group">
        <label for="photo">Photo</label>
        {{input value=photo id="photo"}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="article">Article</label>
        {{input value=article id="article"}}
      </div>
      <button {{action 'saveStory'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'storyFormShow'}} class="btn-success">New Story</button>
{{/if}}
