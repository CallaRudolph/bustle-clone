{{#if updateStoryForm}}
  <h3>Update {{story.headline}}</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline id="headline" placeholder=story.headline}}
      </div>
      <div class="form-group">
        <label for="photo">Photo</label>
        {{input value=photo id="photo" placeholder=story.photo}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=story.author}}
      </div>
      <div class="form-group">
        <label for="article">Article</label>
        {{input value=article id="article" placeholder=story.article}}
      </div>
      <button {{action 'update' story}}>Update</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateStoryForm'}}>Update Story</button>
{{/if}}
